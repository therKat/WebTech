@inject UserManager<ApplicationUser> UserManager; 

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn my-2 my-sm-0" asp-controller="Account" asp-action="Login" style="background-color: #C4C1A4 !important">
        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn my-2 my-sm-0" asp-controller="Account" asp-action="Register" style="background-color: #C4C1A4 !important">
        <i class="bi bi-person-plus"></i> Đăng ký
    </a>
}
else
{

    @*User profile section*@
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" style="background-color: #C4C1A4 !important"
                aria-expanded="false">
            <i class="bi bi-person-badge"></i> Xin chào @UserManager.GetUserName(User)
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-list"></i> Đơn hàng
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i> Người dùng
                    </a>
                </li>
            }
        </ul>
    </div>
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn my-2 my-sm-0" style="background-color: #DC8686 !important">
            
            <i class="bi bi-box-arrow-in-right"></i> Đăng xuất
        </button>
    </form>
}

